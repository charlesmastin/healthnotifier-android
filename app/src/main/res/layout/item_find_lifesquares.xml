<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/global_metric_small">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/find_text_name"
        android:textSize="@dimen/global_text_medium" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/find_text_address"
        android:textSize="@dimen/global_text_small" />
    
    <TextView
        android:visibility="gone"
        android:id="@+id/tvLifesquareLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/find_text_address"
        android:textSize="@dimen/global_text_small" />

</LinearLayout>