<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="168dp"

    android:background="#FFFFFF"
    android:orientation="vertical"
    android:visibility="gone"
    app:behavior_hideable="true"
    app:behavior_peekHeight="168dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    style="@style/Widget.Design.BottomSheet.Modal">

    <!-- JW for padding, because "box model" is going foobar if we render the keyboard, LOL WTF MAN -->
    <!-- get some specific classes or themes or some swill to remove the inline attributes -->

    <LinearLayout
        android:id="@+id/jimmySlaps"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvSheetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:alpha="0.54"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActionUpload"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_cloud_upload_black_24dp"
            tools:ignore="MissingPrefix"
            android:tint="#757575"
            android:contentDescription="Upload Photos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Upload photos"
            android:alpha="0.87"
            android:textColor="#000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActionCamera"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            tools:ignore="MissingPrefix"
            android:tint="#757575"
            android:contentDescription="Use Camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Use Camera"
            android:alpha="0.87"
            android:textColor="#000"
            android:textSize="16sp" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>